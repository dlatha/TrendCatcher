<h1>Listing Tags</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.content %></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'You fucking serious? I ain\'t taking shit for this!'  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul><ul>
  <% @tweet_news.each do |f| %>
      <li>
        <%= f.text%>
        <span><%= time_ago_in_words(f.created_at) %> ago</span>
      </li>
  <% end %>
</ul>
